  "type": "commonjs",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/alailsonko/28Mansion-Backend.git",
  "author": "alailsonko <aalailson3@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.2",
    "@types/supertest": "^2.0.10",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "3",
    "eslint": "7",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-node": "11",
    "eslint-plugin-promise": "4",
    "eslint-plugin-standard": "4",
    "git-commit-msg-linter": "^3.0.0",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "lint-staged": "^10.4.2",
    "rimraf": "^3.0.2",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.2",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.3"
  },
  "scripts": {
    "start": "node ./dist/server.js --config ormconfig.js",
    "build": "rimraf dist && tsc",
    "dev:server": "ts-node-dev --transpile-only --ignore-watch node_modules src/server.ts",
    "dev": "ts-node src/server.ts",
    "test": "jest --passWithNoTests --verbose --runInBand --detectOpenHandles",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "yarn test -- --watch --verbose -c jest-unit-config.js",
    "test:integration": "yarn test -- --watch --detectOpenHandles --unhandled-rejections=strict -c jest-integration-config.js",
    "test:staged": "yarn test -- --findRelatedTests",
    "test:ci": "yarn test -- --coverage",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "typeorm:prod:revert": "yarn ts-node ./node_modules/typeorm/cli.js migration:revert --config ormconfig.js",
    "typeorm:prod:run": "yarn ts-node ./node_modules/typeorm/cli.js migration:run --config ormconfig.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "ts-node": "^9.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "pg": "^8.4.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.28",
    "validator": "^13.1.17"
  }
}
